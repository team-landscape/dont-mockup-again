{
  "schemaVersion": 1,
  "project": {
    "name": "Don't Mockup Again Sample",
    "bundleId": "com.example.dontmockupagain",
    "packageName": "com.example.dontmockupagain",
    "platforms": ["ios", "android"],
    "locales": ["en-US", "es-ES"],
    "devices": [
      { "id": "ios_phone", "width": 1290, "height": 2796, "pixelRatio": 1, "platform": "ios" },
      { "id": "android_phone", "width": 1080, "height": 1920, "pixelRatio": 1, "platform": "android" }
    ],
    "slots": [
      { "id": "slot1", "name": "Slot 1", "order": 1, "sourceImagePath": "assets/source/shot1.png" },
      { "id": "slot2", "name": "Slot 2", "order": 2, "sourceImagePath": "assets/source/shot2.png" },
      { "id": "slot3", "name": "Slot 3", "order": 3, "sourceImagePath": "assets/source/shot3.png" }
    ]
  },
  "template": {
    "main": {
      "background": { "type": "gradient", "from": "#111827", "to": "#1f2937", "direction": "180deg" },
      "slotBackgrounds": {},
      "slotElements": {},
      "frame": { "type": "simpleRounded", "enabled": true, "inset": 80, "radius": 80 },
      "text": {
        "title": { "x": 0, "y": 120, "w": 1290, "h": 220, "font": "SF Pro", "size": 88, "weight": 700, "align": "center" },
        "subtitle": { "x": 0, "y": 330, "w": 1290, "h": 160, "font": "SF Pro", "size": 48, "weight": 500, "align": "center" }
      },
      "shotPlacement": { "x": 120, "y": 560, "w": 1050, "h": 2200, "fit": "cover", "cornerRadius": 60 },
      "elements": []
    },
    "instances": []
  },
  "copy": {
    "keys": {
      "app.title": { "en-US": "This is title section", "es-ES": "This is title section" },
      "app.subtitle": { "en-US": "This is subtitle section", "es-ES": "This is subtitle section" },
      "app.description": { "en-US": "This is description section.", "es-ES": "This is description section." },
      "app.patchNote": { "en-US": "This is patch note section.", "es-ES": "This is patch note section." },
      "slot1.title": { "en-US": "This is title section", "es-ES": "This is title section" },
      "slot1.subtitle": { "en-US": "This is subtitle section", "es-ES": "This is subtitle section" },
      "slot2.title": { "en-US": "This is title section", "es-ES": "This is title section" },
      "slot2.subtitle": { "en-US": "This is subtitle section", "es-ES": "This is subtitle section" },
      "slot3.title": { "en-US": "This is title section", "es-ES": "This is title section" },
      "slot3.subtitle": { "en-US": "This is subtitle section", "es-ES": "This is subtitle section" }
    }
  },
  "pipelines": {
    "localization": {
      "mode": "llm-cli",
      "sourceLocale": "en-US",
      "llmCli": {
        "command": "gemini",
        "timeoutSec": 120,
        "promptVersion": "v1",
        "prompt": "You are an expert ASO localization copywriter for app store screenshots.\nTranslate naturally for the target locale while preserving conversion intent and mobile-first readability.\nKeep the tone benefit-driven, concise, and action-oriented.\nPrefer wording that improves discoverability and relevance for app-store users in that locale.\nDo not add unnecessary punctuation or emojis unless the source already uses them."
      }
    },
    "export": {
      "outputDir": "dist",
      "formats": ["png"],
      "zip": true,
      "metadataCsv": true
    },
    "upload": {
      "enabled": false,
      "fastlane": {
        "iosLane": "ios metadata",
        "androidLane": "android metadata"
      }
    }
  }
}
