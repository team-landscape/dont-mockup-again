{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Don't Mockup Again",
  "version": "0.1.0",
  "identifier": "com.dontmockupagain.studio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run bundle:pipeline && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Don't Mockup Again",
        "width": 2000,
        "height": 1333,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "resources": [
      "resources/pipeline.bundle.mjs",
      "resources/bin/node"
    ],
    "macOS": {
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "icon": [
      "icons/icon.icns"
    ]
  }
}
